# Fittober Fitness Tracker Environment Variables
# Copy this file to .env and fill in your actual values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Get this from Supabase: Settings → Database → Connection String (Session Mode, port 5432)
DATABASE_URL=postgresql://username:password@host.supabase.co:5432/postgres

# ===========================================
# EMAIL NOTIFICATIONS (SendGrid)
# ===========================================
# Get API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.your_api_key_here

# Verified sender email (must verify in SendGrid first)
SENDGRID_FROM_EMAIL=your-email@example.com

# Comma-separated list of team member emails (no spaces)
EMAIL_RECIPIENTS=member1@example.com,member2@example.com,member3@example.com,member4@example.com

# ===========================================
# SERVER CONFIGURATION
# ===========================================
PORT=3000
NODE_ENV=development
